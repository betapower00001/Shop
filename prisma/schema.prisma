generator client {
  provider = "prisma-client-js"
 output = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Float
  imageUrl    String
  stock       Int      @default(0)
  createdAt   DateTime @default(now())

  orders      Order[]  // เพิ่มฟิลด์นี้เพื่อเชื่อมโยงกับ Order
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  
  orders    Order[]  // เพิ่มฟิลด์นี้เพื่อเชื่อมโยงกับ Order
}

model Order {
  id        Int      @id @default(autoincrement())
  userId    Int
  productId Int
  quantity  Int
  totalAmount Float    // ยอดรวมของคำสั่งซื้อ
  status    String   // เช่น 'pending', 'shipped', 'completed'
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  product   Product  @relation(fields: [productId], references: [id])
}


