generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client" // กำหนดพาธที่ต้องการให้ Prisma Client ถูกสร้างขึ้น
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  price     Float
  createdAt DateTime @default(now())
}
